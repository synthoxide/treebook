<p id="notice"><%= notice %></p>

<h1>All Statuses</h1> 

<div class="ui submit button"> 
<%= link_to 'Post New Status', new_status_path %>
</div>

<% @statuses.each do |status| %>

<div class="ui comments">
  <div class="comment">
    <a class="avatar">
      <img src="http://semantic-ui.com/images/avatar/small/matt.jpg">
    </a>
    <div class="content">
      <a class="author"></a>
      <div class="text">
        <%= status.content %>
      </div>
      <div class="actions">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
          <%= link_to 'Edit', edit_status_path(status) %>
          <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
        </span>
      </div>
    </div>
  </div>
</div>


<% end %>
